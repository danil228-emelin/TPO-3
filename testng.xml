<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Fastpic Test Suite" parallel="tests" thread-count="2">
    <parameter name="browser" value="chrome"/> <!-- Default parameter -->

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="FastpicTests"/>
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="FastpicTests"/>
        </classes>
    </test>
</suite